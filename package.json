{
  "name": "circlesfera-backend",
  "version": "1.0.0",
  "description": "Servidor de señalización para CircleSfera",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.server.json",
    "start": "node build/index.js",
    "dev": "tsx server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsx": "^4.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShadyFeliu/CircleSfera-Backend.git"
  },
  "keywords": ["websocket", "signaling", "webrtc", "circlesfera"],
  "author": "ShadyFeliu",
  "license": "MIT"
}
